const navItems = [
  {
    name: "About",
    url: "/",
    icons: "fa-solid fa-user"
  },
  {
    name: "Contact",
    url: "/contact",
    icons: "fa-solid fa-envelope"
  },
  {
    name: "GitHub",
    url: "https://github.com/badger3000",
    icons: "fa-brands fa-github"
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/kyle-r-ross",
