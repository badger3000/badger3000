---
import {Image} from "astro:assets";
import {getAllPens} from "../sanity/api";
import {urlForImage} from "../sanity/urlForImage";

const pens = await getAllPens();

interface Pen {
  title: string;
  slug: {current: string};
  description: string;
  thumbnail: {
    asset: {
      _ref: string;
    };
  };
}
---

<div class="text-white my-6">
  <h2 class="my-2">
    <svg
      class="w-[138px] h-[28px]"
      viewBox="0 0 138 26"
      fill="none"
      stroke="#fff"
      stroke-width="2.3"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
      ><path
        d="M15 8a7 7 0 1 0 0 10m7-8.7L33 2l11 7.3v7.4L33 24l-11-7.3zm0 0 11 7.4 11-7.4m0 7.4L33 9.3l-11 7.4M33 2v7.3m0 7.4V24M52 6h5a7 7 0 0 1 0 14h-5zm28 0h-9v14h9m-9-7h6m11 1h6a4 4 0 0 0 0-8h-6v14m26-14h-9v14h9m-9-7h6m11 7V6l11 14V6"
      ></path></svg
    >
  </h2>
</div>

<div class="flex md:flex-row flex-col">
  {
    pens.map((pen: Pen) => (
      <a
        href={`/codepen/${pen.slug.current}`}
        class="relative mb-3 block transition-all duration-300 ease-in-out md:mr-2 md:text-sm lg:mr-0 lg:hover:translate-y-[-3px]"
      >
        {pen.thumbnail && (
          <Image
            src={urlForImage(pen.thumbnail.asset._ref).url()}
            alt={pen.title}
            width={300}
            height={200}
            class={"rounded-lg"}
          />
        )}
      </a>
    ))
  }
</div>
